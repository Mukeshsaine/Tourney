<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BGMIActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4AA1E6"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_arrow_back_ios"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BGMI Gameplay"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:fontFamily="@font/abhaya_libre"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="2dp"
                app:cardMaxElevation="1dp"
                app:cardCornerRadius="10dp"
                >


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#18B2F8"
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="@font/abhaya_libre"
                android:textAlignment="center"
                android:text="Play Now"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:backgroundTint="#C0E3F3"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/back_ground_border"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:drawableStart="@drawable/baseline_smartphone"
                        android:text="0089990"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:backgroundTint="#C0E3F3"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/back_ground_border"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:drawableStart="@drawable/baseline_lock_24"
                        android:text="0089990"
                        />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abhaya_libre"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:text="Click here to copy"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:minWidth="1dp"
                android:layout_marginTop="10dp"
                android:background="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_ground_border"
                    android:backgroundTint="#C0E3F3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:drawableStart="@drawable/baseline_videogame_asset"
                        android:gravity="center"
                        android:text="Solo" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_ground_border"
                    android:backgroundTint="#C0E3F3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:drawableStart="@drawable/baseline_lock_24"
                        android:gravity="center"
                        android:text="Erangal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_ground_border"
                    android:backgroundTint="#C0E3F3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:drawableStart="@drawable/baseline_folder_open"
                        android:gravity="center"
                        android:text="Paid" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_ground_border"
                    android:backgroundTint="#C0E3F3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:drawableStart="@drawable/baseline_timer"
                        android:gravity="center"
                        android:text="Apr 9,2022 1:01AM" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_ground_border"
                    android:backgroundTint="#C0E3F3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:drawableStart="@drawable/baseline_date_range"
                        android:gravity="center"
                        android:text="Erangal" />

                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:minWidth="1dp"
                android:layout_marginTop="15dp"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#18B2F8"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:fontFamily="@font/abhaya_libre"
                android:textAlignment="center"
                android:text="About The Tournaments"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/abhaya_libre"
                android:textAlignment="center"
                android:text="The items only show the icon; the label is reserved for the selected item. This happens when the menu has four or more items. With fewer items, icons and labels are always displayed"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:minWidth="1dp"
                android:layout_marginTop="15dp"
                android:background="#000" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#0999DC"
            android:layout_marginRight="0dp"
            android:background="@drawable/back_ground_border"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:drawableStart="@drawable/baseline_compost"
                android:text="Members"
                android:textSize="20dp"
                android:textColor="#fff"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#E91E63"
            android:layout_marginLeft="0dp"
            android:background="@drawable/back_ground_border"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_marginRight="2dp"
                android:drawableStart="@drawable/baseline_play_circle"
                android:text="Play Now"
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>